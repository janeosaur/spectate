<header>
  <div class="jumbotron">
    <div class="logo-left">
      <a href="/"><p class="life">Spectate</p></a>
    </div>
    <div class="dropdown">
      <% if signed_in? %>
        Welcome, <%= current_user.first_name%>
        <%= link_to "Sign Out", destroy_user_session_path, :method => :delete, class: "signout" %>
        <div class="dropdown-content">
          <%= link_to "Events", events_path %>
        </div>
      <% else %>
        <%= button_to "Sign In", new_user_session_path, class: "signin" %>
        <%= button_to "Sign Up", new_user_registration_path, :method => :get, class: "signup" %>
      <% end %>
    </div>
  </div>
</header>
