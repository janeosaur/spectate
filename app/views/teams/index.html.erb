<h1>List of Teams</h1>


<ul style="list-style: none">
  <% @teams.each do |team| %>
  <li><%= link_to team.name, team %></li>
  <div class="admin">
    <% if signed_in? && current_user.admin? %>
      <%= link_to edit_team_path(team) do %>
        <i class="glyphicon glyphicon-pencil"></i>
      <% end %>
      <%= link_to destroy_team_path(team), data: { confirm: "Are you sure you want to delete" }, method: :delete do %>
        <i class="glyphicon glyphicon-trash"></i>
      <% end %>
    <% end %>
  </div>
  <% end %>
</ul>

<%= link_to "Create New Team", new_team_path %>
