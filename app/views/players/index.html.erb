<div class="players-index">

  <h1>Manage Players</h1>
  <%= link_to "Create New Player", new_player_path %>

  <% @players.each do |player| %>
    <p>
      <%= player.gamer_tag %>
      <%= link_to edit_player_path(player) do %>
        <i class="glyphicon glyphicon-pencil"></i>
      <% end %>
      <%= link_to destroy_player_path(player), data: { confirm: "Are you sure you want to delete" }, method: :delete do %>
        <i class="glyphicon glyphicon-trash"></i>
      <% end %>
      <% if player.team.nil? %> N/A
        <% else %> <%= link_to player.team.name, player.team %>
      <% end %>

    </p>
  <% end %>
</div>
