<div class="container edit-profile">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>

    <div class="row">
      <div class="col-sm-3 col-sm-offset-1">

        <div class="socials">
          Socials
          <div class="field">
            <%= f.label :twitter %><br />
            <%= f.text_field :twitter %>
          </div>

          <div class="field">
            <%= f.label :instagram %><br />
            <%= f.text_field :instagram %>
          </div>
        </div>

        <div class="photo">
          <div class="field">
            <%= f.label :photo %><br />
            <%= f.text_field :photo %>
          </div>

          <div class="field">
            <%= f.label :cover_photo %><br />
            <%= f.text_field :cover_photo %>
          </div>
        </div>
      </div>

      <div class="col-sm-3">
        <div class="field">
          <%= f.label :username %><br />
          <%= f.text_field :username %>
        </div>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true %>
        </div>

        <div class="field">
          <%= f.label :first_name %><br />
          <%= f.text_field :first_name %>
        </div>

        <div class="field">
          <%= f.label :last_name %><br />
          <%= f.text_field :last_name %>
        </div>

        <div class="field">
          <%= f.label :country %><br />
          <%= f.country_select :country %>
        </div>

        <div class="field">
          <%= f.label :admin %><br />
          <%= f.check_box :admin %>
        </div>
      </div>


        <div class="field">
          <%= f.label :password %><br />
          <%= f.password_field :current_password, autocomplete: "off" %>
        </div>

        <div class="actions">
          <%= f.submit "Update" %>
        </div>
      <% end %>

      <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

  </div>

</div> <!-- container -->
